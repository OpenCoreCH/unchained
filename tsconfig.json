{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2018",
    "module": "esNext",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,

    /* Module Resolution Options */
    "baseUrl": ".",
    "paths": {
      // Resolve types for meteor node stubs
      "meteor/unchained:*": ["node_modules/@unchainedshop/types/index.d.ts"],

      /* Support absolute /imports/* with a leading '/' */
      "/*": ["*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/@unchainedshop/types"],
    "esModuleInterop": true,
    "preserveSymlinks": true
  },
  "exclude": ["examples/**"],
  "include": [
    "packages/**/src/*",
    "packages/**/test/*",
    "packages/**/plugins/*",
    "packages/**/workers/*"
  ]
}
