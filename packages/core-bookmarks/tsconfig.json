{
  "compilerOptions": {
    "incremental": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./lib",
    "typeRoots": ["node_modules/@types", "node_modules/unchained-core-types"],
    "baseUrl": ".",
    "paths": {
      "meteor/unchained:*": [
        "node_modules/unchained-core-types/index.d.ts"
      ]
    }
  },
  "include": ["src"]
}
